<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="com.example.messenger.presentation.ui.views.MessageLayout">

    <TextView
        android:id="@+id/topic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_topic_name"
        android:fontFamily="sans-serif"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@color/topic_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sender_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/name"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:paddingEnd="8dp"
        android:textColor="@color/text_message"
        android:textSize="18sp"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/iv_media"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:contentDescription="@string/description_media" />
</merge>
