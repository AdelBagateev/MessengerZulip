<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/message_sender_bg">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_write"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/bg_et_message_sender"
        android:hint="@string/hint_message_sender"
        android:paddingHorizontal="20dp"
        android:textColor="@color/text_message"
        android:textColorHint="@color/count_unselected"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_send"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_ib_media_sender"
        android:src="@drawable/ic_add_media"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_write"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
