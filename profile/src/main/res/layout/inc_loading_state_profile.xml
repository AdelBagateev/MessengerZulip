<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:shimmer_duration="900">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_avatar_fake"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:background="@color/shimmer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".25"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerRadius" />

        <androidx.cardview.widget.CardView
            android:id="@+id/tv_name_fake"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/shimmer"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_avatar_fake" />

        <androidx.cardview.widget.CardView
            android:id="@+id/tv_status_fake"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/shimmer"
            app:cardCornerRadius="16dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name_fake" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
